{
  "name": "payload",
  "$schema": "../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "payload/src",
  "projectType": "library",
  "targets": {
    "lint": {
      "executor": "@nx/eslint:lint",
      "outputs": ["{options.outputFile}"]
    },
    "build:config": {
      "executor": "@nx/esbuild:esbuild",
      "outputs": ["{options.outputPath}"],
      "options": {
        "outputPath": "dist/payload",
        "tsConfig": "payload/tsconfig.lib.json",
        "main": "payload/src/config.ts",
        "scripts": []
      }
    },
    "build:admin": {
      "executor": "nx:run-commands",
      "options": {
        "command": "cross-env PAYLOAD_CONFIG_PATH=../dist/payload/config.js payload build",
        "cwd": "payload"
      }
    },
    "build": {
      "executor": "nx:run-commands",
      "options": {
        "commands": [
          "nx run payload:build:config",
          "nx run payload:build:admin"
        ],
        "parallel": false
      }
    },
    "test": {
      "executor": "@nx/jest:jest",
      "outputs": ["{workspaceRoot}/coverage/{projectRoot}"],
      "options": {
        "jestConfig": "payload/jest.config.ts"
      }
    }
  },
  "tags": []
}
